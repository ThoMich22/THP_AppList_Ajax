<div class="container pb-5">
    <div class="row">
        <div class="col-4 card p-3 bg-primary">
            <div class="card-body">
                <div class="card-title px-3">
                    <h3 class="text-white">Liste des emails</h3>           
                </div>
                <div class="card-text">
                    <ul class="list-group list-group-flush" id="email-list">
                        <% @all_emails.each do |email|  %>
                        
                            <li class="list-group-item bg-primary text-dark" id="<%=email.id%>">
                                <%= link_to email.object, email_path(email.id), remote: true, method: :get, class:'text-light'%>
                                
                            </li>
                        
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-8 card">
            
            <div class="card-body p-3">
                <div class="card-title px-3 pt-3 ">
                <h3 class="text-secondary">Email séléctionné</h3>
                </div>
                <div class="card-text py-2" id="card-element" >
                    <div id="card-supp">
                    
                    </div>
                    
                </div>
            </div>
                
        </div>
    </div>
</div>
